@model StellarBillingSystem_Malar.Models.SizeMasterViewModel
@{
    ViewData["Title"] = "Size Master MT";
}

<h2 class="text-center">Size Master</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="AddSize" asp-controller="SizeMasterMT" method="post" autocomplete="off">

    <div class="form-group">
        <label for="SizeID">Size ID</label>
        @Html.TextBoxFor(model => model.Model.SizeID, new { @class = "form-control", type = "number", placeholder = "Enter Size ID" })
        @Html.ValidationMessageFor(model => model.Model.SizeID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="SizeName">Size Name</label>
        @Html.TextBoxFor(model => model.Model.SizeName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Model.SizeName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="CategoryID">Category</label>
        @Html.DropDownListFor(model => model.Model.CategoryID, Model.CategoryList, "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Model.CategoryID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mt-3">
        <button type="submit" name="buttonType" value="Get" class="btn btn-primary">Get</button>
        <button type="submit" name="buttonType" value="save" class="btn btn-success">Save</button>
        <button type="submit" name="buttonType" value="Delete" class="btn btn-danger">Delete</button>
    </div>
</form>

<hr />

<h4>Existing Sizes</h4>

@if (Model.SizeData != null && Model.SizeData.Rows.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                @foreach (System.Data.DataColumn col in Model.SizeData.Columns)
                {
                    <th>@col.ColumnName</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model.SizeData.Rows)
            {
                <tr>
                    @foreach (var item in row.ItemArray)
                    {
                        <td>@item</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data found.</p>
}